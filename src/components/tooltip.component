<apex:component layout="none" selfClosing="true">
    <apex:attribute type="String" name="position" description="tooltip display position " required="true"/>
    <apex:attribute name="text" type="String" description="help text for the tooltip"/>
    <apex:attribute name="style" type="String" description="inline style for tooltip"/>
    <div class="slds-popover slds-popover--tooltip slds-nubbin--{!position}" role="tooltip" style="{!style}">
        <div class="slds-popover__body">{!text}</div>
    </div>
</apex:component>