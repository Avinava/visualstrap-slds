<apex:component layout="none">
    <apex:attribute type="String" name="colspan" description="column width in number between 1 to 12"/>
    <apex:attribute type="String" name="type" description="box style classes which is inside the column"/>
    <div class="slds-col--padded slds-size--{!colspan}-of-12">
        <div class="slds-box slds-box--{!type} slds-theme--shade slds-text-align--center">
            <apex:componentBody />
        </div>
    </div>
</apex:component>